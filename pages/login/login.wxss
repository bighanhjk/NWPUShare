/* pages/login/login.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 30rpx;
}
.logo {
    width: 144rpx;
    height: 144rpx;
    margin: 40rpx 0;
}
.btn-login {
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    text-align: center;
    border-radius: 10rpx;/*圆角*/
}
.wechat {
    background-color: #6C63FF;/*#42BD55微信绿色*/
    color: #ffffff;
    margin-bottom: 30rpx;/*上下间距*/
}
.woxiang {
    background-color: #ffffff;
    color: #6C63FF;
    border: 2rpx solid #6C63FF;/*边框*/
}
.agreement {
  color: #9D9D9D;
  font-style: 24rpx;
  display: flex;
  position: absolute;
  bottom:50rpx
}
.agreement .protocol {
  margin-left: 10rpx;
  color: #6C63FF;
}